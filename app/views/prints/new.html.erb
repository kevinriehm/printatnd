<%= form_for @print do |f| %>

<div class="row">
  <div class="choose-destination col-sm-3 col-lg-3">
    <div class="row">
      <div class="col-lg-12">
        <%= f.select(:building, buildings, :selected => choose_building) %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-lg-12">
        <%= f.select(:printer, default_printers, :selected => choose_printer) %>
      </div>
    </div>
  </div>
  <div class="col-sm-1 col-lg-1"><br><span class="hidden-sm divider">&raquo;</span></div>
  <div class="col-sm-4 col-lg-4">
    <input id="filepicker" data-fp-apikey="Ac88GjthXQdqNsr9JvJJHz" type="filepicker-dragdrop" data-fp-multiple="true" data-fp-drag-class="col-12 printatcu-dragdrop" data-fp-button-class="btn btn-primary btn-block"/>
  </div>
  <div class="col-sm-1 col-lg-1"><br><span class="hidden-sm divider">&raquo;</span><br><br></div>
  <div class="col-sm-3 col-lg-3">
    <%= f.submit(:class => "btn btn-success btn-large btn-block") %>
    <br>
    <div class="well">
      <div class="checkbox">
        <%= f.label(:collate) do %>
          <%= f.check_box :collate %>
          <%= t("helpers.label.print.collate") %>
        <% end %>
      </div>

      <div class="checkbox">
        <%= f.label(:double_sided) do %>
          <%= f.check_box :double_sided %>
          <%= t("helpers.label.print.double_sided") %>
        <% end %>
      </div>

      <div class="input-group">
        <span class="input-group-addon">Copies:</span>
        <%= f.text_field :copies, :class => "form-control", :placeholder => 1, :size => 2, :maxlength => 2 %>
      </div>
    </div>
  </div>
</div>

<% end %>